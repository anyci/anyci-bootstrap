#!/usr/bin/env bash
# This project is AnyCI enabled. https://github.com/briceburg/anyci for more!
set -eo pipefail
readonly PROJECT_ROOT="$( cd "$(dirname "$0")/.." ; pwd -P)"
ANYCI_HOME="${ANYCI_HOME:-$HOME/.anyci}"
ANYCI_BOOTSTRAP_URL="${ANYCI_BOOTSTRAP_URL:-https://github.com/briceburg/anyci-bootstrap.git}"

[ -d "$ANYCI_HOME/anyci-bootstrap" ] || {
  echo "# $0: missing anyci-bootstrap. intalling now..." >&2;
  git clone "$ANYCI_BOOTSTRAP_URL" "$ANYCI_HOME/anyci-bootstrap" 2>&1 | sed "s/^/#    /g"
}

export PROJECT_ROOT
exec "$ANYCI_HOME/anyci-bootstrap/bin/anyci-bootstrap" "$@"
